{
  "name": "ff-tactics-game",
  "private": true,
  "version": "0.1.0",
  "description": "Final Fantasy Tactics like real-time deck builder game",
  "scripts": {
    "dev": "pnpm --filter client-web dev",
    "dev:server": "pnpm --filter server dev",
    "test": "pnpm --filter game-logic test",
    "build": "pnpm --filter game-logic build && pnpm --filter client-web build",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=7.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.8.7",
    "typescript": "^5.0.4"
  }
}
